<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#1c6b6a"
    android:gravity="center" >

    <Button
        android:id="@+id/start_game"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:drawableTop="@drawable/start_game"
        android:onClick="onClick"
        android:padding="10dp"
        android:text="@string/btn_start_game" />

    <Button
        android:id="@+id/settings"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/start_game"
        android:layout_below="@+id/start_game"
        android:layout_marginRight="50dp"
        android:onClick="onClick"
        android:padding="10dp"
        android:text="@string/btn_settings_game" />

    <Button
        android:id="@+id/account_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/settings"
        android:layout_alignBottom="@+id/settings"
        android:layout_alignLeft="@+id/start_game"
        android:layout_marginLeft="50dp"
        android:onClick="onClick"
        android:padding="10dp"
        android:text="@string/btn_account" />

</RelativeLayout>